<Mycontent>
    size_hint: 1, None
    height: self.minimum_height
    orientation: 'vertical'
    Button:
        size_hint: None, None
    Button:
        size_hint: None, None
    Button:
        size_hint: None, None

<SpecialGridLayout@GridLayout>
    cols: 1
    MDLabel:
        text: "Hello world"
        halign: "center"
        theme_text_color: "Error"
        font_style: "Subtitle2"
        id: special_label

Screen:
    id: screen
    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: "Demo MDBottomNavigation"
            md_bg_color: app.theme_cls.primary_color
            right_action_items: [["dots-vertical", lambda the_button: app.dropdown().open(the_button)]]
        MDBottomNavigation:
            MDBottomNavigationItem:
                text: "Scr3"
                name: "Scr3"
                icon: "music"
                BoxLayout:
                    orientation: 'vertical'
                    width: 200
                    size_hint_x: None
                    MDTextField:
                        id: username
                        text: ""
                        hint_text: 'id'
                        size_hint_x: None
                        size_hint_y: None
                        pos_hint:{"center_x":2,"y":2}
                        height: 30
                        focus: True                        
                    MDTextField:
                        id: password
                        hint_text: 'pw'
                        size_hint_x: None
                        size_hint_y: None
                        pos_hint:{"center_x":2,"y":2}
                        height: 30
                        password: True
                    MDTextField:
                        id: field4
                        hint_text: 'text invoeren'
                        size_hint_x: None
                        size_hint_y: None
                        pos_hint:{"center_x":2,"y":2}
                        height: 30
                        on_text: app.check_text(field4.text), app.check_text1(field4.text), print('a')  
                    MDFlatButton:
                        text: "ALERT DIALOG"
                        size_hint_x: None
                        size_hint_y: None
                        pos_hint:{"center_x":2,"y":2}
                        height: 30
                        on_release: app.show_alert_dialog() 
                    Widget: 
            MDBottomNavigationItem:
                text: "Scr4"
                name: "Scr4"
                BoxLayout:
                    orientation: 'vertical'
                    MDLabel:
                        text: 'menu'
                        halign: 'center'
                    MDRectangleFlatButton:
                        text: 'Oke'
                        pos_hint: {'center_x':0.5,'center_y':0.5 }
                        #on_press: root.manager.current = 'profile'
                        on_press: app.popup1()
                    MDRectangleFlatButton:
                        text: 'Close'
                        pos_hint: {'center_x':0.5,'center_y':0.5 }
                        on_press: app.close()
            MDBottomNavigationItem:
                text: "Scr5"
                name: "Scr5"
                BoxLayout:
                    MDTextField:
                        hint_text: "Enter username"
                        helper_text: "or click on forgot username"
                        helper_text_mode: "on_focus"
                        icon_right: "android"
                        icon_right_color: app.theme_cls.primary_color
                        pos_hint:{'center_x': 0.5, 'center_y': 0.5}
                        size_hint_x:None
                        width:300
            MDBottomNavigationItem:
                text: "Scr6"
                name: "Scr6"
                BoxLayout:
                    ScrollView:
                        GridLayout:
                            id: panel_container
                            cols: 1
                            size_hint_y: None
                            height: self.minimum_height
            MDBottomNavigationItem:
                text: "Scr8"
                name: "Scr8"
                BoxLayout:
                    orientation: 'vertical'
                    GridLayout:
                        rows: 1
                        TextInput:
                            id: my_textinput
                        Button:
                            on_release:
                                special_gridlayout.ids.special_label.text = my_textinput.text
                                # app.print_ids(root.ids)
                                print(my_textinput.text)
                                print(mdlabel.text)
                                app.set_text(my_textinput.text)
                        MDLabel:
                            id: mdlabel
                            text: "Hello world"
                            halign: "center"
                            theme_text_color: "Error"
                            font_style: "Subtitle2"
                        SpecialGridLayout:
                            id: special_gridlayout